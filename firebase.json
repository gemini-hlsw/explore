{
  "hosting": [
    {
      "target": "dev",
      "public": "heroku/static",
      "ignore": ["/*.conf.json"],
      "rewrites": [
        {
          "source": "**",
          "destination": "/index.html"
        }
      ]
    },
    {
      "target": "staging",
      "public": "heroku/static",
      "ignore": ["/*.conf.json"],
      "rewrites": [
        {
          "source": "**",
          "destination": "/index.html"
        }
      ]
    },
    {
      "target": "production",
      "public": "heroku/static",
      "ignore": ["/*.conf.json"],
      "rewrites": [
        {
          "source": "**",
          "destination": "/index.html"
        }
      ]
    }
  ]
}
